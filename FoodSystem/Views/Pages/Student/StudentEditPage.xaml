<UserControl x:Class="FoodSystem.Views.Pages.Student.StudentEditPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoodSystem.Views.Pages.Student"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding OkCommand}">Ок</Button>
            <Button Command="{Binding CancelCommand}">Отмена</Button>
        </StackPanel>
        <StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Имя</TextBlock>
                <TextBox Text="{Binding Name}"></TextBox>
            </StackPanel>
            <StackPanel Orientation="Horizontal">
                <TextBlock>Класс</TextBlock>
                <ComboBox ItemsSource="{Binding Classrooms}" 
                          DisplayMemberPath="Name"
                          SelectedValue="{Binding Classroom}">
                </ComboBox>
            </StackPanel>
        </StackPanel>
    </StackPanel>
</UserControl>
