<UserControl x:Class="FoodSystem.Views.Pages.Student.StudentPage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:FoodSystem.Views.Pages.Student"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel>
        <StackPanel Orientation="Horizontal">
            <Button Command="{Binding AddStudentCommand}">Добавить</Button>
            <Button Command="{Binding EditStudentCommand}">Изменить</Button>
            <Button Command="{Binding RemoveStudentCommand}">Удалить</Button>
        </StackPanel>
        <ListView ItemsSource="{Binding Students}" SelectedItem="{Binding CurrentStudent}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="{Binding Name}"></TextBlock>
                        <TextBlock Text="{Binding Classroom.Name}"></TextBlock>
                    </StackPanel>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </StackPanel>
</UserControl>
